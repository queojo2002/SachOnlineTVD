
@model IEnumerable<SachOnlineTVD.Models.Slider>


<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div id="carousel1" class="carousel slide">
                <ol class="carousel-indicators">
                    @{
                        int i = 0;
                        foreach (var item in Model)
                        {
                            if (item.HienThi == true)
                            {
                                if (i == 0)
                                {
                                    <li data-target="#carousel1" data-slide-to="0" class="active"></li>
                                }
                                else
                                {
                                    <li data-target="#carousel1" data-slide-to="@i" class=""></li>
                                }
                                i++;
                            }


                        }
                    }

                </ol>
                <div class="carousel-inner">
                    @{
                        int j = 0;
                        foreach (var item in Model)
                        {
                            if (item.HienThi == true)
                            {
                                if (j == 0)
                                {
                                    <div class="item active">
                                        <img class="img-responsive" src="~/Images/Slider/@item.Anh" alt="thumb">
                                        <div class="carousel-caption"> @item.TenSlider </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="item">
                                        <img class="img-responsive" src="~/Images/Slider/@item.Anh" alt="thumb">
                                        <div class="carousel-caption">  @item.TenSlider </div>
                                    </div>
                                }
                                j++;
                            }
                        }
                    }



                </div>
                <a class="left carousel-control" href="#carousel1" data-slide="prev">
                    <span class="icon- prev"></span>
                </a>
                <a class="right carousel-control" href="#carousel1" data-slide="next">
                    <span class="icon-next"></span>
                </a>
            </div>
        </div>
    </div>
</div>
