@model IEnumerable<SachOnlineTVD.Models.MENU>
@using SachOnlineTVD.Controllers;
@using System;
@{
    Layout = null;
    SachOnlineController XuLy = new SachOnlineController();

}

<ul class="nav navbar-nav">

    @foreach (var sach in Model)
    {
        if (sach.ParentID == null)
        {
            if (XuLy.Get_ParentID(sach.ID).Count <= 0)
            {
                <li class=""><a href="~/@sach.MenuLink">@sach.MenuName</a> </li>
            }
            else
            {
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        @sach.MenuName
                        <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        @foreach (var item in XuLy.Get_ParentID(sach.ID))
                        {
                            <li><a href="~/@item.MenuLink">@item.MenuName</a></li>
                        }
                    </ul>
                </li>
            }

        }


    }




</ul>
