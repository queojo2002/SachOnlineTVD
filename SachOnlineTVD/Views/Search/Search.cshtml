@model IEnumerable<SachOnlineTVD.Models.SACH>

@{
    ViewBag.Title = "Search";
}




<div class="col-lg-9 col-md-9 col-sm-9 col-xs-12">
    <h2 class="text-center">Kết quả tìm kiếm</h2>
    <hr>


    <div class="row text-center">
        @{
            int i = 0;

        }
        @if (Model != null)
        {
            if (Model.Count() > 0)

            {
                foreach (var sach in Model)
                {
                    i++;
                    if (i % 3 == 0)
                    {
                        @:<div class="col-sm-4 col-md-4 col-lg-4 col-xs-6 hidden-xs">
                        }
                        else
                        {
                            @:<div class="col-sm-4 col-md-4 col-lg-4 col-xs-6">
                            }

                            <div class="thumbnail">
                                <img src="~/Images/@sach.AnhBia" alt="Thumbnail Image @sach.MaSach" class="img- responsive img-rounded imgbook ">
                                <div class="caption">
                                    <h4 style="min-height:70px;">
                                        <a href="@Url.Action("BookDetail","SachOnline", new { id =sach.MaSach})">@sach.TenSach</a>
                                    </h4>
                                    <p>
                                        <a href="#" class="btn btn-primary" role="button">
                                            <span class="glyphicon glyphicon- shopping-cart" aria-hidden="true"></span> Add to Cart
                                        </a>
                                    </p>
                                </div>
                            </div>
                        @:</div>
                    }

                @:</div>
                <nav class="text-center">
                    <ul class="pagination">
                        <li>
                            <a href="#" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                        <li class="active">
                            <a href="#">1</a>
                        </li>
                        <li>
                            <a href="#">2</a>
                        </li>
                        <li>
                            <a href="#">3</a>
                        </li>
                        <li>
                            <a href="#">4</a>
                        </li>
                        <li class="disabled">
                            <a href="#">5</a>
                        </li>
                        <li>
                            <a href="#" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    </ul>
                </nav>

            }
            else
            {
                <h2 class="text-center">Không có sách theo yêu cầu</h2>
            }
        }








    </div>

