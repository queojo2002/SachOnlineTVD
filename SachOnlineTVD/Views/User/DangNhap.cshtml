
@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<style type="text/css">
    td {
        height: 40px;
    }
</style>
<h4 style="color:red; text-align:center;">@ViewBag.ThongBao</h4>
<h2 style="text-align:center;">ĐĂNG NHẬP</h2>
<table align="center">
    @using (Html.BeginForm())
    {

        @Html.ValidationSummary(true)
        if (Request.Cookies["Username"] != null)
        {
            <tr>
                <td>Tên đăng nhập: </td>
                <td>

                    @Html.TextBox("TenDN", Request.Cookies["Username"].Value)
                    @ViewData["Err1"]
                </td>
            </tr>
        }
        else
        {
            <tr>
                <td>Tên đăng nhập: </td>
                <td>

                    @Html.TextBox("TenDN")
                    @ViewData["Err1"]
                </td>
            </tr>
        }


        if (Request.Cookies["Password"] != null)
        {
            <tr>
                <td>Mật khẩu: </td>
                <td>
                    @Html.Password("MatKhau", Request.Cookies["Password"].Value)
                    @ViewBag.Err2
                </td>


            </tr>
        }
        else
        {
            <tr>
                <td>Mật khẩu: </td>
                <td>
                    @Html.Password("MatKhau")
                    @ViewBag.Err2
                </td>


            </tr>
        }

        if (Request.Cookies["Username"] != null && Request.Cookies["Password"] != null)
        {
            <tr>
                <td></td>
                <td>
                    @Html.CheckBox("rememberMe", true)
                    <label for="rememberMe">Remember me</label>
                </td>


            </tr>
        }
        else
        {
            <tr>
                <td></td>
                <td>
                    @Html.CheckBox("rememberMe")
                    <label for="rememberMe">Remember me</label>
                </td>


            </tr>
        }


        <tr>
            <td></td>
            <td>
                <input type="submit" value="Đăng nhập" />
            </td>
        </tr>
    }
</table>
