@model SachOnlineTVD.Models.CHUDE

@{
    ViewBag.Title = "XÓA CHỦ ĐỀ";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>XÁC NHẬN THÔNG TIN CẦN XÓA</h2>

<h3>Bạn quyết định xóa chủ đề này?</h3>
<h4>@Html.Raw(ViewBag.ThongBao)</h4>
<div>
    <hr /> <br />
    <dl class="dl-horizontal">
        <dt>
            Tên Chủ Đề
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenChuDe)
        </dd>

    </dl>
    <br />
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="XÓA" class="btn btn-default" /> | @Html.ActionLink("VỀ TRANG QUẢN LÝ SÁCH", "Index")
        </div>
    }
</div>
