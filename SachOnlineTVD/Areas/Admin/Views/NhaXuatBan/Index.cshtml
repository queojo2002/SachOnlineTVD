@using SachOnlineTVD.Models
@using PagedList.Mvc;
@model PagedList.PagedList<SachOnlineTVD.Models.NHAXUATBAN>

@{
    ViewBag.Title = "Quản lý nhà xuất bản";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="text-align:center;">QUẢN LÝ THÔNG TIN NHÀ XUẤT BẢN</h2>

<p>
    <a href="@Url.Action("Create", "NhaXuatBan")" class="btn btn-warning" role="button">Thêm mới NXB</a>

</p>
<table class="table">
    <tr>
        <th style="text-align:center;">
            Tên nhà xuất bản
        </th>
        <th style="text-align:center;">
            Địa chỉ
        </th>
        <th style="text-align:center;">
            Số điện thoại
        </th>
        <th style="text-align:center;">Hành động</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr style="text-align:center;">
            <td>
                @Html.DisplayFor(modelItem => item.TenNXB)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaChi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DienThoai)
            </td>
            <td>
                <a href="@Url.Action("Edit", new { id = item.MaNXB })" class="btn btn-warning" role="button">Sửa</a>
                <a href="@Url.Action("Details", new { id = item.MaNXB })" class="btn btn-primary" role="button">Chi tiết</a>
                <a href="@Url.Action("Delete", new { id = item.MaNXB })" class="btn btn-danger" role="button">Xóa</a>
            </td>
        </tr>
    }

</table>
@*Tạo iên kết phần trang*@
Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount
<div class="MenuTrang">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
</div>

<style>
    .MenuTrang {
        display: inline;
        text-align: center;
    }
</style>